using System;

namespace Ejercicio9
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] numeros = new int[4];
            for (int i = 0; i < 4; i++)
            {
                Console.WriteLine("Introduce un numero");
                numeros[i] = int.Parse(Console.ReadLine());
                Console.WriteLine("");
            }
            for (int i = 0; i < 4; i++)
            { Console.WriteLine("El numero insertado es " + numeros[i]); }
                Console.ReadKey();
        }
    }
}
